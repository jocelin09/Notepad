    <!-- LIGHT/DAY mode theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#EAC554</item>
        <item name="colorPrimaryDark">#EAC554</item>
        <item name="colorAccent">#EAC554</item>
        <item name="backgroundcolor">#ffffff</item>
        <item name="cardbackground">#f0f0f0</item>
        <item name="textcolor">#000000</item>
        <item name="tintcolor">#f2f2f2</item>
        <item name="buttoncolor">#EAC554</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/WindowsAnimationTransition</item>

    </style>

    <!-- NIGHT/DARK mode theme. -->
    <style name="DarkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#EAC554</item>
        <item name="colorPrimaryDark">#EAC554</item>
        <item name="colorAccent">#EAC554</item>
        <item name="backgroundcolor">#433e3e</item>
        <item name="cardbackground">#7e7979</item>
        <item name="textcolor">#ffffff</item>
        <item name="tintcolor">#b2b32c</item>
        <item name="buttoncolor">#EAC554</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/WindowsAnimationTransition</item>

    </style>

    <style name="WindowsAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="DarkTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
